@model Microsoft.AspNetCore.Http.IRequestCookieCollection
@{
    ViewData["Title"] = "Cookies";
}

<h2>Cookies</h2>
<p>These are your cookies on this website!</p>
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Name</th>
            <th>Value</th>
        </tr>
    </thead>
    @foreach (var cookie in Model)
    {
        <tr>
            <td>@cookie.Key</td>
            <td>@cookie.Value</td>
        </tr>
    }
</table>
