@model IEnumerable<PuzzleLeaderboardEntry>
@{
    ViewData["Title"] = "Puzzle Leaderboard";
}

<h2>@ViewData["Title"]</h2>
<p>You must have at least 100 puzzle points to appear on the leaderboard.</p>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Points</th>
        </tr>
    </thead>
    @foreach (var entry in Model)
    {
        <tr>
            <td>@entry.Rank</td>
            <td>@entry.Username</td>
            <td>@entry.Points</td>
        </tr>
    }
</table>
