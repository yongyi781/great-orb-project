@model IEnumerable<CustomAltar>
@{ 
    ViewData["Title"] = "Custom Altars";
}

<h2>@ViewData["Title"]</h2>
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var altar in Model)
    {
        <tr>
            <td>@altar.Id</td>
            <td>@altar.Name</td>
            <td>
            <a asp-controller="Solo" asp-action="Index" asp-route-altar="@altar.Id">Play</a> |
            <a asp-controller="Tools" asp-action="Anglemap" asp-route-altar="@altar.Id">Edit</a></td>
        </tr>
    }
</table>